declare-font($name, $weight=normal, $style=normal, $file-base-name=$name)
	
	@font-face
		
		font-family $name
		
		$path = pathjoin($fonts-path, $file-base-name)
		
		src url($path + '.ttf' + $rev-qs) format('truetype');
		
		font-weight $weight
		font-style $style

declare-font('Old Standard', 400, normal, 'OldStandard-Regular')
declare-font('Old Standard', 700, normal, 'OldStandard-Bold')
declare-font('Old Standard', 400, italic, 'OldStandard-Italic')
